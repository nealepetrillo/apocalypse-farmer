package {	import flash.events.*;		public class SquareGameEvent extends Event {				public static const ALIGN = "make";		public static const UNALIGN = "break";		public static const COLORED = "color_set";		private var squareColor:uint;		public function SquareGameEvent(type:String,										bubbles:Boolean = false,										cancelable:Boolean = false,										eventColor:uint = 0) {			super(type,bubbles,cancelable);			squareColor=eventColor;			trace("A color="+squareColor+" ["+type+"] event has been thrown");		}				public override function clone():Event {			return new SquareGameEvent(type,bubbles,cancelable,squareColor);		}				public override function toString():String {			return formatToString("SquareGameEvent", "type", "bubbles",								  "cancelable", "eventPhase", "squareColor");		}				public function getColor():uint {			return squareColor;		}	}}